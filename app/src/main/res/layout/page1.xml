<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:isScrollContainer="true"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Types of Works"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:id="@+id/relativeLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <CheckBox
                                android:id="@+id/checkbox1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crown"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bridge"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veneer"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cantilever Bridge"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Metal"
                                android:layout_margin="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/relativeLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <CheckBox
                                android:id="@+id/checkbox6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Onlay/ Inlay"
                                android:layout_margin="5dp" />


                            <CheckBox
                                android:id="@+id/checkbox7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Post Crown"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Post Core"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maryland Bridge"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Precision Attachment"
                                android:layout_margin="5dp"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Types of Alloy /Material"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Implant Restoration's"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"
                            android:layout_weight="1">

                            <CheckBox
                                android:id="@+id/checkbox11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Screw Retain"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3I Implant"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bicon"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Astra"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zimmer"
                                android:layout_margin="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"
                            android:layout_weight="1">

                            <CheckBox
                                android:id="@+id/checkbox16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cemented"
                                android:layout_margin="5dp"/>                            

                            <CheckBox
                                android:id="@+id/checkbox17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ankylos/xive"
                                android:layout_margin="5dp"/>

                            <CheckBox
                                android:id="@+id/checkbox18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biocare"
                                android:layout_margin="5dp"/>                            

                            <CheckBox
                                android:id="@+id/checkbox19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Osstem"
                                android:layout_margin="5dp"/>
                            

                            <CheckBox
                                android:id="@+id/checkbox20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Others"
                                android:layout_margin="5dp"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>